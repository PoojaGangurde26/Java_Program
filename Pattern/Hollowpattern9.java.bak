import java.util.Scanner;
class  Hollowpattern9
{
	public static void p26(int n){
		for(int i=1;i<=n;i++){
      for(int j=1;j<=n-i;j++){
	System.out.print(" ");
          }
			for(int j=1;j<=(2*i-1);j++){
				if((j==1||j==(2*i-1)||i==n){
					System.out.print("*");
				}else{
					System.out.print(" ");
				}
			}
			System.out.println();
		}
		
	}
	public static void main(String arg[]){
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		p26(n);
	}
}
