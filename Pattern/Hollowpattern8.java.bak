import java.util.Scanner;
class  Hollowpattern8
{
	public static void p26(int n){
		for(int i=0;i<n;i++){
			for(int j=0;j<i;j++){
				System.out.print(" ");
			}
			for(int j=0;j<(2*(n-i)-1);j++){
				if(j==0||j==(2*(n-i)-2)||i==0){
					System.out.print("*");
				}else{
					System.out.print(" ");
				}
			}
			System.out.println();
		}
		
	}
	public static void main(String arg[]){
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		p26(n);
	}
}
