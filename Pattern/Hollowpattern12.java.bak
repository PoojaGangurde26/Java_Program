import java.util.Scanner;
class Hollowpattern12 
{
   public static void p28(int n){
	int str=1;
    int sp=n/2;
          for(int i=0;i<n;i++){
                for(int j=0;j<sp;j++){
                          System.out.print("  ");
					
                }
                  for(int j=0;j<str;j++){
                     System.out.print("*");
					
                  }
			System.out.println();
                    if(i<n/2){
                      sp--;
                      str+=2;
						
                    }else{
						sp++;
                        str-=2;
                    }
          }

   }

	public static void main(String[] args) 
	{
		Scanner sc=new Scanner(System.in);
         int n=sc.nextInt();
          p28(n);

	}
}
