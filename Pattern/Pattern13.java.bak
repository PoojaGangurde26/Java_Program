import java.util.Scanner;
public class Pattern13
{
	public static void p13(int n){
	for(int i=1;i<=n;i++){
		for(int j=1;j<=n-i;j++){
			System.out.print(" ");
		}
		for(int j=1;j<=i;j++){
			System.out.print("*");
		}
		System.out.println();
		
	}
	
	for(int i=n;i>0;i--){
		for(int j=1;j<=n-i;j++){
			System.out.print(" ");
		}
		for(int j=1;j<=i;j++){
			System.out.print("*");
		}
		System.out.println();
		
	}
		
	}
	public static void main(String arg[]){
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		p13(n);
	}
}
