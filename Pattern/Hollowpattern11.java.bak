import java.util.Scanner;
class  Hollowpattern11
{
	public static void p27(int n){
		for(int i=1;i<=n;i++){
      for(int j=1;j<=n-i;j++){
	System.out.print(" ");
          }
			for(int j=1;j<=(2*i-1);j++){
				if(j==1||j==(2*i-1)||i==n){
					System.out.print("*");
				}else{
					System.out.print(" ");
				}
			}
			System.out.println();
		}
		
		
	for(int i=n-1;i>0;i--){
      for(int j=1;j<=n-i;j++){
	System.out.print(" ");
          }
			for(int j=1;j<=(2*i-1);j++){
				if(j==1||j==(2*i-1)||i==n){
					System.out.print("*");
				}else{
					System.out.print(" ");
				}
			}
			System.out.println();
		}
		
		
	}
	public static void main(String arg[]){
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		p27(n);
	}
}
